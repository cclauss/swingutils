<?xml version="1.0" encoding="UTF-8"?>
<project default="jar">

	<property name="jarfile" location="dist/jython-swingutils.jar" />
	<property name="jnlpfile" value="jython-swingutils.jnlp" />
	<property file="build.properties"/>

	<taskdef name="jython.compile" classname="org.python.util.JycompileAntTask" />

	<target name="compile">
		<javac srcdir="."/>
		<jython.compile srcdir="." destdir="build" />
	</target>

	<target name="jar" depends="compile">
		<delete file="${jarfile}" />
		<jar destfile="${jarfile}">
			<fileset dir="build" />
		</jar>
	</target>

	<target name="signjar" depends="jar">
		<signjar jar="${jarfile}" alias="${signer}" storepass="${storepass}" />
	</target>

</project>
